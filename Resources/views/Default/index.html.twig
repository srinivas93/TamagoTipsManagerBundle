<div>
    <div id="reload" class="alert alert-info">
        {{ tip.translation(app.request.locale).content }}
        <div class="pull-right">
            <a id="thumbs-up" class="thumb" href="{{ path('tip_feedback', {'id': tip.id, 'feedback': 'like'}) }}">
                <i class="fa fa-thumbs-up"></i>
            </a>
            <a id="thumbs-down" class="thumb" href="{{ path('tip_feedback', {'id': tip.id, 'feedback': 'dislike'}) }}">
                <i class="fa fa-thumbs-down"></i>
            </a>
            <button type="button" class="close" data-dismiss="alert" style="margin-left: 1em">&times;</button>
        </div>
    </div>

    <script>
        $('a.thumb').on('click', function(event) {
            event.preventDefault();
            //alert('some thumb clicked!!' + $(this).attr('id'))
            $.get($(this).attr('href'), null, function(event) {
                alert('got a response')

                location.reload();

            });

        });
    </script>

</div>
