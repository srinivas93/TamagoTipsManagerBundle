<style>
    a.thumb {
        text-decoration: none;
    }
</style>
{% include 'TamagoTipsManagerBundle:Default:tip.html.twig' %}

<script>
    $('a.thumb').on('click', function(event) {
        event.preventDefault();
        var clickedElement = $(this);
        var icon = clickedElement.html();
        clickedElement.html('<i class="fa fa-fw fa-spinner fa-pulse"></i>');
        $.get($(this).attr('href')).done(function(data) {
            clickedElement.html(icon);
            console.log(data);
            $('#tamago-tip').html(data);
        });
    });
</script>
