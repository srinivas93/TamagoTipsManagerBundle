<style>
    a.thumb {
        text-decoration: none;
    }
</style>

<div id="tamago-tip" class="alert alert-info">
    {{ tip.translation(app.request.locale).content }}
    <div class="pull-right">
        <a id="thumbs-up" class="thumb" href="{{ path('tip_feedback', {'id': tip.id, 'feedback': 'like'}) }}">
            <i class="fa fa-fw fa-thumbs-up"></i>
        </a>
        <a id="thumbs-down" class="thumb" href="{{ path('tip_feedback', {'id': tip.id, 'feedback': 'dislike'}) }}">
            <i class="fa fa-fw fa-thumbs-down"></i>
        </a>
        <button type="button" class="close" data-dismiss="alert" style="margin-left: 1em">&times;</button>
    </div>
</div>

<script>
    $('a.thumb').on('click', function(event) {
        event.preventDefault();
        var clickedElement = $(this);
        var icon = clickedElement.html();
        clickedElement.html('<i class="fa fa-fw fa-spinner fa-pulse"></i>');
        $.get($(this).attr('href')).done(function(data) {
            clickedElement.html(icon);
            console.log(data);
            $('#tamago-tip').html(data.tip);
        });
    });
</script>
